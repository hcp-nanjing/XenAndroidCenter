<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|start|center_horizontal"
        android:src="@drawable/right" />

    <ImageView
        android:id="@+id/pool_details_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|start|center_horizontal"
        android:src="@drawable/host" />

    <TextView
        android:id="@+id/pool_details_item_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/right_arrow"
        android:layout_toRightOf="@id/pool_details_item_image"
        android:gravity="center_vertical|start|center_horizontal"
        android:text=""
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:clickable="false"
        android:textColor="#000000"
        android:textSize="18sp" >
    </TextView>

</RelativeLayout>