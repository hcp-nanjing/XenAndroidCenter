<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#0484d4"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/title_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:src="@drawable/add"
        android:visibility="gone"/> <!-- Hide it by default Enable it only when use it-->

    <TextView
        android:id="@+id/title_text"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:text="@string/title_activity_pool_list_main"
        android:layout_toLeftOf="@id/title_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:gravity="center|center_vertical|center_horizontal" />


</RelativeLayout>